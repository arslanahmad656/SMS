<div class="adv-table">
    <div class="form-group ">
        <div class="col-md-4" style="padding-left: 0px;">
            <select class=" form-control" name="class">
                <option disabled selected value style="display:none">Select A Class</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
    </div>
    <table class="display table table-bordered table-striped" id="dynamic-table">
        <thead>
            <tr>
                <th>
                    Sr.
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObtainedMarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Test.Type)
                </th>
                <th class="hidden-phone">Actions</th>
            </tr>
        </thead>
        <tbody>

            @{
                var count = 0;
            }
            @foreach (var item in Model)
            {
                <tr data-for-id="@item.Id" class="gradeX" style="cursor: pointer">
                    <td>
                        @(++count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObtainedMarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Test.Type)
                    </td>
                    <td class="center hidden-phone">
                        <a href="@Url.Action("EditStudentMarks", new { studentId = item.StudentId, testId = item.TestId })"><span><i style="font-weight:bold;font-size: 2em; color:cornflowerblue" class="fa fa-edit"></i></span></a>&nbsp;
                        @*<a href="@Url.Action("DeleteEmployee", new { id = @item.Id })"><span><i style="font-weight:bold;font-size: 2em; color:brown" class="fa fa-trash"></i></span></a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

@section c_scripts{
    <script>
        (function assignClickHandlerToTableRows() {

            $('#dynamic-table tbody tr').click(function () {
                var currentRowId = Number($(this).attr('data-for-id'));
                location.href = '/accountant/EmployeeDetails/' + currentRowId;
            });
        })();
    </script>
}